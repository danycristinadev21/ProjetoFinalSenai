@model PapelArt.Models.EstoqueViewModel
@{
    ViewData["Title"] = "Consultar Estoque";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS (os mesmos usados nas outras telas) -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body class="Consulta de Estoque">

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>

        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="usuario-logado-box">
                <span class="usuario-logado-nome">
                    Usuário: @User.Identity.Name
                </span>

                <form asp-controller="Usuarios" asp-action="Logout" method="post">
                    <button type="submit" class="btn-logout-header">
                        Sair
                    </button>
                </form>
            </div>
        }
    </header>


    <!-- TÍTULO -->
    <div style="container-titulo">
        <h1 class="cadastro-titulo">CONSULTAR ESTOQUE</h1>
    </div>

    <!-- CONTAINER PRINCIPAL -->
    <div class="container-centered">
        <div class="cadastro-produto-container">

            <!-- FORMULÁRIO DE CONSULTA (GET) -->
            <form method="get" class="form-produto form-area" asp-action="Index" asp-controller="Estoque">

                <div class="linha">
                    <label>CÓDIGO:</label>
                    <input type="text" name="codigo" value="@(Model?.FiltroCodigo ?? "")" />

                </div>

                <div class="linha">

                    <label>NOME:</label>
                    <input type="text" name="nome" value="@(Model?.FiltroNome ?? "")" />
                </div>

                <div class="linha">
                    <button class="btn-cadastrar-produto" type="submit">CONSULTAR</button>
                </div>

                <div class="linha">
                    <!-- Botão para consultar tudo (adiciona showAll=true) -->
                    <!-- Botão para consultar tudo (adiciona showAll=true) -->
                    <a href="@Url.Action("Index", "Estoque", new { showAll = true })" class="btn-cadastrar-produto">
                        CONSULTA GERAL
                    </a>
                </div>



            </form>

            <!-- PAINEL DIREITO -->
            <div class="painel-rapido">
                <h2>PAINEL DE<br>NAVEGAÇÃO RÁPIDA</h2>

                <div class="painel-links">
                    <a class="painel-link" href="/Produtos/Create">CADASTRAR PRODUTO</a>
                    <a class="painel-link" href="/Categorias/Create">CADASTRAR CATEGORIA</a>
                    <a class="painel-link" href="/Relatorios/Index">GERAR RELATÓRIO</a>
                    <a class="painel-link" href="/Movimentacoes/Create">REGISTRAR ENTRADA / SAÍDA</a>
                </div>
            </div>

        </div>
    </div>

    <div>
        <!-- RESULTADOS: tabela com produtos encontrados -->
        <div style="width:100%; margin-top:20px;">
            @if (Model?.Produtos != null && Model.Produtos.Any())
            {
                <table style="width:100%; border-collapse:collapse; font-family:'Zen Maru Gothic', sans-serif;">
                    <thead>
                        <tr>
                            <th style="text-align:left; padding:12px; font-size:16px;">Cód</th>
                            <th style="text-align:left; padding:12px; font-size:16px;">Nome</th>
                            <th style="text-align:left; padding:12px; font-size:16px;">Descrição</th>
                            <th style="text-align:right; padding:12px; font-size:16px;">Valor Unitário (R$)</th>
                            <th style="text-align:right; padding:12px; font-size:16px;">Qtde</th>
                            <th style="text-align:right; padding:12px; font-size:16px;">Valor Total (R$)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Produtos)
                        {
                            <tr style="background: rgba(255,255,255,0.5); border-bottom:1px solid rgba(0,0,0,0.05);">
                                <td style="padding:10px;">@p.Id</td>
                                <td style="padding:10px;">@p.Nome</td>
                                <td style="padding:10px;">@p.Descricao</td>
                                <td style="padding:10px; text-align:right;">@p.Preco.ToString("N2")</td>
                                <td style="padding:10px; text-align:right;">@p.Quantidade</td>
                                <td style="padding:10px; text-align:right;">
                                    @{
                                        decimal total = p.Preco * p.Quantidade;
                                    }
                                    @total.ToString("N2")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div style="padding:20px; color:#F33E33; font-weight:700;">
                    Nenhum produto encontrado.
                </div>
            }
        </div>

    </div>

<!-- RODAPÉ -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        @using (Html.BeginForm("Logout", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.forms[0].submit();" class="footer-btn"
                onclick="return confirm('Deseja realmente sair?')">
                SAIR &#8680
            </a>
        }

    </footer>

</body>

</html>