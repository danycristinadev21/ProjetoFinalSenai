@model PapelArt.Models.Movimentacao

@{
    ViewData["Title"] = "Registrar Movimentação";
    Layout = null;
}



<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body>

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>
        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <div class="container-titulo">
        <h1 class="cadastro-titulo">REGISTRAR ENTRADA / SAÍDA</h1>
    </div>

    <div class="container-centered">
        <div class="cadastro-produto-container">

            <form asp-action="Create" method="post" class="form-area form-produto">




                <!-- PRODUTO -->
                <div class="linha">
                    <label>PRODUTO*:</label>
                    <select asp-for="ProdutoId" asp-items="ViewBag.Produtos" id="ProdutoId">
                        <option value="">Selecione...</option>
                    </select>
                </div>

                <!-- TIPO -->
                <div class="linha">
                    <label>TIPO DE MOVIMENTAÇÃO*:</label>
                    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoMovimentacao>()">
                    </select>
                </div>

                <!-- QUANTIDADE -->
                <div class="linha">
                    <label>QUANTIDADE*:</label>
                    <input asp-for="Quantidade" type="number" id="Quantidade" />
                </div>

                <div class="linha">
                    <label>VALOR UNITÁRIO:</label>
                    <input asp-for="ValorUnitario" id="ValorUnitario" type="number" step="0.01" readonly />
                </div>

                <div class="linha">
                    <label>VALOR TOTAL:</label>
                    <input asp-for="ValorTotal" id="ValorTotal" type="number" step="0.01" readonly />
                </div>


                <!-- ✅ CORRETO -->
                <div class="linha">
                    <label>OBSERVAÇÃO:</label>
                    <input type="text" asp-for="Observacao" class="observacao" />
                </div>

                <p class="campos-obrigatorios">
                    *Campos de preenchimento obrigatório
                </p>


                <button class="btn-cadastrar-produto" type="submit">REGISTRAR</button>

            </form>

            <!-- PAINEL DIREITO -->
            <div class="painel-rapido">
                <h2>PAINEL DE<br>NAVEGAÇÃO RÁPIDA</h2>

                <div class="painel-links">
                    <a class="painel-link" href="/Produtos/Create">CADASTRAR PRODUTO</a>
                    <a class="painel-link" href="/Categorias/Create">CADASTRAR CATEGORIA</a>
                    <a class="painel-link" href="/Estoque/Consulta">CONSULTAR ESTOQUE</a>
                    <a class="painel-link" href="/Relatorios/Index">GERAR RELATÓRIO</a>
                </div>
            </div>


        </div>
    </div>

    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

    <!-- coloque isto diretamente antes do fechamento </body> -->
    <script>
        // Serializa a lista vinda do ViewBag (garanta que ViewBag.ListaProdutos não seja null)
        const produtos = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ListaProdutos ?? new List<object>()));

        console.log("Produtos carregados:", produtos);

        // Elementos do DOM
        const selectProduto = document.getElementById("ProdutoId");
        const inputQuantidade = document.getElementById("Quantidade");
        const inputValorUnitario = document.getElementById("ValorUnitario");
        const inputValorTotal = document.getElementById("ValorTotal");

        // Função que atualiza o valor unitário e total a partir do id do produto
        function atualizarValoresPorProdutoId(produtoId) {
            if (!produtoId) {
                inputValorUnitario.value = "";
                inputValorTotal.value = "";
                return;
            }

            // produtoId vindo do select é string — converta para number
            const idNum = Number(produtoId);

            // Procura usando a propriedade correta (Id maiúsculo)
            const produtoSelecionado = produtos.find(p => p.Id === idNum);

            if (!produtoSelecionado) {
                console.warn("Produto não encontrado no array 'produtos' para id:", produtoId);
                inputValorUnitario.value = "";
                inputValorTotal.value = "";
                return;
            }

            // Propriedade de preço é "Preco" (maiúsculo), conforme sua classe Produto
            const precoUnitario = parseFloat(produtoSelecionado.Preco || 0);

            inputValorUnitario.value = precoUnitario.toFixed(2);

            // Recalcula total se já houver quantidade
            const quantidade = parseFloat(inputQuantidade.value || 0);
            inputValorTotal.value = (precoUnitario * quantidade).toFixed(2);
        }

        // Evento: quando troca de produto
        if (selectProduto) {
            selectProduto.addEventListener("change", function () {
                atualizarValoresPorProdutoId(this.value);
            });
        }

        // Evento: quando muda quantidade (recalcula com o valor unitário atual)
        if (inputQuantidade) {
            inputQuantidade.addEventListener("input", function () {
                const preco = parseFloat(inputValorUnitario.value || 0);
                const qtd = parseFloat(this.value || 0);
                inputValorTotal.value = (preco * qtd).toFixed(2);
            });
        }

        // Se quiser, você pode forçar uma atualização inicial caso já exista um produto selecionado
        if (selectProduto && selectProduto.value) {
            atualizarValoresPorProdutoId(selectProduto.value);
        }
    </script>


</body>

</html>