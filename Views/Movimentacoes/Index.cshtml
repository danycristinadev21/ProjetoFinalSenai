@model IEnumerable<PapelArt.Models.Movimentacao>

@{
    ViewData["Title"] = "Movimentações";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movimentações de Estoque - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body>

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>
        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <div style="container-titulo">
        <h1 class="cadastro-titulo">MOVIMENTAÇÕES DE ESTOQUE</h1>
    </div>


    <div class="container-centered">
        <div class="cadastro-listaprod-container">

            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Produto</th>
                        <th>Tipo</th>
                        <th>Quantidade</th>
                        <th>Data</th>
                        <th>Usuário</th>
                        <th>Observação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Produto?.Nome</td>
                            <td>@item.Tipo</td>
                            <td>@item.Quantidade</td>
                            <td>@item.DataMovimentacao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Usuario?.Nome</td>
                            <td>@item.Observacao</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="linha linha-botoes-horizontal">
            <a asp-action="Create" class="btn-novo-produto" type="submit">REGISTRAR NOVA MOVIMENTAÇÃO</a>
        </div>
        <!-- BOTÕES -->
    

    </div>

    <!-- Rodapé -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

</body>

</html>