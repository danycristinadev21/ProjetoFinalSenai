@model PapelArt.Models.produtos

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="nome" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="descricao" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Preço</label>
        <input asp-for="preco" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Quantidade</label>
        <input asp-for="quantidade" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="id_categoria" class="form-control" asp-items="@(new SelectList(ViewBag.categorias, "id", "nome"))"></select>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
