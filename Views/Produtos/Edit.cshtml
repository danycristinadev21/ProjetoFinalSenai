@model PapelArt.Models.produtos
@{
    ViewData["Title"] = "Editar Produto";
}

<h2 class="text-center mb-4">Editar Produto</h2>

<form asp-action="Edit" method="post" class="w-50 mx-auto">
    <input type="hidden" asp-for="id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="nome" class="form-label">Nome</label>
        <input asp-for="nome" class="form-control" />
        <span asp-validation-for="nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="descricao" class="form-label">Descrição</label>
        <textarea asp-for="descricao" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="preco" class="form-label">Preço</label>
        <input asp-for="preco" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="quantidade" class="form-label">Quantidade</label>
        <input asp-for="quantidade" class="form-control" type="number" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="id_categoria" class="form-label">Categoria</label>
        <select asp-for="id_categoria" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "id", "nome"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

