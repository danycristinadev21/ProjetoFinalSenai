@model PapelArt.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body class="bg-sistema">

    <!-- CABEÇALHO -->
    <header class="header">
        <div class="logo">
            <img src="~/images/logo.jpg" alt="Logo PapelArt" />
        </div>

        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <!-- TÍTULO DA PÁGINA -->
    <div class="container-titulo">
        <h1 class="cadastro-titulo">EDITAR PRODUTO</h1>
    </div>

    <!-- CONTAINER PRINCIPAL -->
    <div class="container-centered">
        <div class="cadastro-produto-container">

            <!-- FORMULÁRIO -->
            <form asp-action="Edit" method="post" class="form-produto form-area">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2"></div>

                <!-- NOME + QUANTIDADE -->
                <div class="linha">
                    <label>PRODUTO:</label>
                    <input asp-for="Nome" type="text" required />

                    <label>QUANTIDADE:</label>
                    <input asp-for="Quantidade" type="number" oninput="calculateTotal()" required />
                </div>

                <!-- DESCRIÇÃO -->
                <div class="linha">
                    <label>DESCRIÇÃO:</label>
                    <input asp-for="Descricao" type="text" />
                </div>

                <!-- PREÇO UNITÁRIO + TOTAL -->
                <div class="linha">
                    <label>VALOR UNITÁRIO (R$):</label>
                    <input asp-for="Preco" type="number" step="0.01" id="Preco" oninput="calculateTotal()" required />

                    <label>VALOR TOTAL (R$):</label>
                    <input type="text" id="valorTotal" disabled />
                </div>

                <!-- CATEGORIA -->
                <div class="linha">
                    <label>CATEGORIA:</label>

                    <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" required>
                        <option value="">Selecione uma categoria...</option>
                    </select>
                </div>

                <!-- BOTÕES -->
                <div class="linha linha-botoes">
                    <button type="submit" class="btn-cadastrar-produto">
                        SALVAR ALTERAÇÕES
                    </button>
                </div>

                <div class="linha linha-botoes">
                    <button type="javascript:history.back()" class="btn-cadastrar-produto">
                        CANCELAR
                    </button>
                </div>

            </form>

        </div>
    </div>

    <!-- RODAPÉ FIXO -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

    <script>
        function calculateTotal() {
            const preco = parseFloat(document.getElementById("Preco").value) || 0;
            const quantidade = parseInt(document.getElementById("Quantidade").value) || 0;
            document.getElementById("valorTotal").value = (preco * quantidade).toFixed(2);
        }

        // Calcula quando abrir a tela também
        window.onload = calculateTotal;
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>

</html>