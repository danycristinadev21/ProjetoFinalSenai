@model PapelArt.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body class="bg-sistema">

    @if (TempData["ProdutoExcluido"] != null)
    {
        <div
            style="background: #d4edda; color: #155724; padding: 15px; border-radius: 8px; margin: 20px 0; border-left: 5px solid #28a745;">
            ✅ @TempData["ProdutoExcluido"]
        </div>
    }

    <!-- CABEÇALHO -->
    <header class="header">
        <div class="logo">
            <img src="~/images/logo.jpg" alt="Logo PapelArt" />
        </div>

        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <!-- TÍTULO DA PÁGINA -->
    <div class="container-titulo">
        <h1 class="cadastro-titulo">EXCLUIR PRODUTO</h1>
    </div>

    <div class="container-titulo">
        <h2>Tem certeza que deseja excluir este produto?</h2>
    </div>
    <!-- CONTAINER PRINCIPAL -->
    <div class="container-centered container-detalhes-produto">
        <div class="cadastro-listaprod-container">


            <!-- DETALHES -->
            <div class="produto-detalhes-card">

                <div class="grupo-detalhes">
                    <span class="detalhe-label">Código</span>
                    <span class="detalhe-valor">#@Model.Id</span>
                </div>

                <div class="grupo-detalhes">
                    <span class="detalhe-label">Categoria</span>
                    <span class="detalhe-valor">@Model.Categoria?.Nome</span>
                </div>

                <div class="grupo-detalhes full">
                    <span class="detalhe-label">Produto</span>
                    <span class="detalhe-valor">@Model.Nome</span>
                </div>

                <div class="grupo-detalhes full">
                    <span class="detalhe-label">Descrição</span>
                    <span class="detalhe-valor">
                        @(string.IsNullOrWhiteSpace(Model.Descricao) ? "Sem descrição" : Model.Descricao)
                    </span>
                </div>

                <div class="grupo-detalhes">
                    <span class="detalhe-label">Valor unitário</span>
                    <span class="detalhe-valor">R$ @Model.Preco.ToString("N2")</span>
                </div>

                <div class="grupo-detalhes">
                    <span class="detalhe-label">Quantidade em estoque</span>
                    <span class="detalhe-valor">@Model.Quantidade</span>
                </div>

                <div class="grupo-detalhes destaque full">
                    <span class="detalhe-label">Valor total em estoque</span>
                    <span class="detalhe-valor">
                        R$ @((Model.Preco * Model.Quantidade).ToString("N2"))
                    </span>
                </div>

            </div>


        </div>

    </div>


    <!-- BOTÕES -->
    <!-- FORM CORRETO - ENVOLVA OS BOTÕES! -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="linha linha-botoes-horizontal">
            <button type="submit" class="btn-cadastrar-produto btn-danger">
                EXCLUIR
            </button>

            <a href="@Url.Action("Index")" class="btn-cadastrar-produto btn-secundario">
                CANCELAR
            </a>
        </div>
    </form>



    <!-- RODAPÉ FIXO -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>


</body>

</html>