@model PapelArt.Models.produtos

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir o produto abaixo?</h3>

<div class="card p-3 mt-3">
    <h4>@Model.nome</h4>
    <p><strong>Descrição:</strong> @Model.descricao</p>
    <p><strong>Preço:</strong> R$ @Model.preco</p>
    <p><strong>Quantidade:</strong> @Model.quantidade</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="id" />
    <div class="mt-3">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
