@model PapelArt.Models.produtos
@{
    ViewData["Title"] = "Excluir Produto";
}

<h2 class="text-center mb-4">Excluir Produto</h2>

<div class="text-center">
    <h4>Tem certeza que deseja excluir este produto?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.nome</dd>

        <dt class="col-sm-3">Categoria</dt>
        <dd class="col-sm-9">@Model.categoria?.nome</dd>

        <dt class="col-sm-3">Pre√ßo</dt>
        <dd class="col-sm-9">@Model.preco.ToString("C")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

