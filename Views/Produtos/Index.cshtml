@model IEnumerable<PapelArt.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Produtos - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body>

    <!-- Cabe√ßalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>
        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <div style="container-titulo">
        <h1 class="cadastro-titulo">LISTA DE PRODUTOS</h1>
    </div>

    @if (TempData["ProdutoExcluido"] != null)
    {
        <div
            style="background: #FFC62980; color: black; padding: 15px; border-radius: 8px; margin: 20px 0; border-left: 5px solid #FF7C2C;">
            @TempData["ProdutoExcluido"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null)
    {
        <div
            style="background: #FFC62980; color: black; padding: 15px; border-radius: 8px; margin: 20px 0; border-left: 5px solid #FF7C2C;">
            @TempData["MensagemSucesso"]
        </div>
    }

    <div class="container-centered">
        <div class="cadastro-listaprod-container">

            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>C√≥digo</th>
                        <th>Produto</th>
                        <th>Categoria</th>
                        <th>Subcategoria</th>
                        <th>Valor Unit√°rio (R$)</th>
                        <th style="width: 150px;">A√ß√µes</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- C√ìDIGO -->
                            <td>@item.Id</td>

                            <!-- NOME DO PRODUTO -->
                            <td>@item.Nome</td>

                            <!-- CATEGORIA PAI -->
                            <td>
                                @{
                                    var categoriaPai = item.Categoria?.CategoriaPai?.Nome;
                                }
                                @(string.IsNullOrEmpty(categoriaPai) ? "-" : categoriaPai)
                            </td>

                            <!-- SUBCATEGORIA -->
                            <td>
                                @(item.Categoria != null ? item.Categoria.Nome : "-")
                            </td>

                            <!-- VALOR UNIT√ÅRIO -->
                            <td>@item.Preco.ToString("N2")</td>

                            <!-- A√á√ïES -->
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-lista-produto">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-lista-produto">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="linha linha-botoes-horizontal">
            <a asp-action="Create" class="btn-novo-produto" type="submit">CADASTRAR NOVO PRODUTO</a>
        </div>

    </div>

    <!-- Bot√µes R√°pidos -->
    <div style="display: flex; justify-content: center; gap: 20px; margin-top: 0; flex-wrap: wrap;">
        <button class="painel-link" onclick="window.print()"
            style="outline: none !important; border: none !important; font-family: Zen Maru Gothic, sans-serif; width: 200px;">
            üñ®Ô∏è IMPRIMIR
        </button>
        <button class="painel-link" onclick="exportToPDF()"
            style="outline: none !important; border: none !important; font-family: Zen Maru Gothic, sans-serif; width: 200px;">
            üìÑ SALVAR PDF
        </button>
        <a href="@Url.Action("Menu", "Home")" class="painel-link" style="width: 200px; text-align: center">üè† MENU
            PRINCIPAL</a>
    </div>

    <script>
        function exportToPDF() {
            window.print();
        }
    </script>


    <!-- Rodap√© -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

</body>

</html>