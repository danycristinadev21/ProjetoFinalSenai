@model PapelArt.Models.Produto
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h2 class="text-center mb-4">Detalhes do Produto</h2>

<div class="w-50 mx-auto">
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Descrição</dt>
        <dd class="col-sm-9">@Model.Descricao</dd>

        <dt class="col-sm-3">Preço</dt>
        <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>

        <dt class="col-sm-3">Quantidade</dt>
        <dd class="col-sm-9">@Model.Quantidade</dd>

        <dt class="col-sm-3">Categoria</dt>
        <dd class="col-sm-9">@Model.Categoria?.nome</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

