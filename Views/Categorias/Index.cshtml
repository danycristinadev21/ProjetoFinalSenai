@model IEnumerable<PapelArt.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categorias - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body>

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>

        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="usuario-logado-box">
                <span class="usuario-logado-nome">
                    Usuário: @User.Identity.Name
                </span>

                <form asp-controller="Usuarios" asp-action="Logout" method="post">
                    <button type="submit" class="btn-logout-header">
                        Sair
                    </button>
                </form>
            </div>
        }
    </header>

    <div style="container-titulo">
        <h1 class="cadastro-titulo">CATEGORIAS CADASTRADAS</h1>
    </div>

    <div class="container-centered">
        <div class="cadastro-produto-container">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>CÓDIGO</th>
                        <th>CATEGORIA</th>
                        <th>CATEGORIA PAI</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                @if (item.CategoriaPaiId != null)
                                {
                                    <span style="padding-left:45px;">
                                        ↳ @item.Nome
                                    </span>
                                }
                                else
                                {
                                    <strong>@item.Nome</strong>
                                }
                            </td>
                            <td>
                                @(item.CategoriaPai != null ? item.CategoriaPai.Nome : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

<!-- RODAPÉ -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        @using (Html.BeginForm("Logout", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.forms[0].submit();" class="footer-btn"
                onclick="return confirm('Deseja realmente sair?')">
                SAIR &#8680
            </a>
        }

    </footer>

</body>

</html>