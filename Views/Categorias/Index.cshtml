@model IEnumerable<PapelArt.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categorias - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body>

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <img src="~/images/logo.jpg" alt="Logo PapelArt" />
        </div>
        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <div style="container-titulo">
        <h1 class="cadastro-titulo">CATEGORIAS CADASTRADAS</h1>
    </div>

    <div class="container-centered">
        <div class="cadastro-produto-container">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>CÓDIGO</th>
                        <th>CATEGORIA</th>
                        <th>CATEGORIA PAI</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>
                                @if (item.CategoriaPaiId != null)
                                {
                                    <span style="padding-left:45px;">
                                        ↳ @item.nome
                                    </span>
                                }
                                else
                                {
                                    <strong>@item.nome</strong>
                                }
                            </td>
                            <td>
                                @(item.CategoriaPai != null ? item.CategoriaPai.nome : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <!-- Rodapé -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

</body>
</html>
