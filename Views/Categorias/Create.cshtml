@model PapelArt.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar Categoria";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapelArt</title>

    <!-- Fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;700&display=swap" rel="stylesheet">

    <!-- CSS (mesmos do produto) -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/cadastro-produto.css" />
</head>

<body class="Cadastro de Categoria">

    <!-- Cabeçalho -->
    <header class="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Menu" title="Voltar ao Menu">
                <img src="~/images/logo.jpg" alt="Logo PapelArt - Voltar ao Menu" />
            </a>
        </div>

        <div class="titulo">
            <h1>PapelArt - Material Escolar</h1>
            <h1>SISTEMA DE CONTROLE DE ESTOQUE</h1>
        </div>
    </header>

    <!-- TÍTULO -->
    <div style="container-titulo">
        <h1 class="cadastro-titulo">CADASTRO DE CATEGORIA</h1>
    </div>

    <!-- CONTAINER PRINCIPAL -->
    <div class="container-centered">
        <div class="cadastro-produto-container">

            <!-- FORMULÁRIO DE CATEGORIA -->
            <form method="post" asp-action="Create" class="form-area form-produto">
                @Html.AntiForgeryToken()

                <div class="linha">
                    <label>CÓDIGO:</label>
                    <input type="text" value="Gerado automaticamente" disabled />
                </div>

                <div class="linha">
                    <label>NOME:</label>
                    <input asp-for="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="linha">
                    <label>CATEGORIA PAI:</label>
                    <select asp-for="CategoriaPaiId" asp-items="ViewBag.CategoriasPai">
                        <option value="">Nenhuma (Categoria principal)</option>
                    </select>
                </div>

                <button class="btn-cadastrar-produto" type="submit">CADASTRAR</button>
            </form>

            <!-- PAINEL DIREITO -->
            <div class="painel-rapido">
                <h2>PAINEL DE<br>NAVEGAÇÃO RÁPIDA</h2>

                <div class="painel-links">
                    <a class="painel-link" href="/Produtos/Create">CADASTRAR PRODUTO</a>
                    <a class="painel-link" href="/Estoque/Consulta">CONSULTAR ESTOQUE</a>
                    <a class="painel-link" href="/Movimentacoes/Create">REGISTRAR ENTRADA / SAÍDA</a>
                    <a class="painel-link" href="/Relatorios/Create">GERAR RELATÓRIO</a>
                </div>
            </div>

        </div>
    </div>

    <!-- RODAPÉ Fixo -->
    <footer class="menu-footer">
        <a href="javascript:history.back()" class="footer-btn">&#8678 VOLTAR</a>
        <a href="/Home/Index" class="footer-btn">SAIR &#8680</a>
    </footer>

</body>

</html>